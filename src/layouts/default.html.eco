<!DOCTYPE html>
<!--
    Leave the following weirdness (“conditional comments” for IE) as-is.
    It's here for future maintenance, if we need to tweak browser compatibility.
-->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8">        <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9">               <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->


<head>
    <!--
        First charset, then the title;
        these *must* load first!
    -->
    <meta charset   ="utf-8"                                />
    <title><%= @getPreparedTitle() %></title>

    <!--
        This particular meta breaks validation, but is useful
        for browser compatibility
    -->
    <meta http-equiv="X-UA-Compatible"
          content   ="IE=edge"                              />

    <!--
        Site Properties
    -->
    <meta name      ="viewport"
          content   ="width=device-width, initial-scale=1"  />

    <!--
        General metadata
    -->
    <meta name      ="description"
          content   ="<%= @getPreparedDescription() %>"     />
    <meta name      ="keywords"
          content   ="<%= @getPreparedKeywords() %>"        />

    <!--
        Any additional metadata
    -->
    <%- @getBlock('meta').toHTML() %>


    <!--
        Library CSS, then ours
    -->
    <!-- Bootstrap 3 includes Normalize.css! Awesome :D -->
    <%- @getBlock('styles').add(@site.css).toHTML() %>
    <% if @document.basename is 'about':
    %><link rel="stylesheet" href="<%- @site.prefixes.css %>/about.css" /><% end %>


    <!-- Library scripts, then ours -->
    <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
    <% if @document.basename is 'freebies':
    %><script defer="defer" src="<%- @site.prefixes.bootstrap %>/js/holder.js"></script><% end %>

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

</head>
<body>
<div class="container clearfix">


    <!--
        Tell people using old version of Internet Explorer
        that 2001 called and wants its browser back.
    -->
    <!--[if lt IE 7]>
    <p class="browsehappy"
        >You are using an <strong>outdated</strong> browser.
        Please <a href="http://browsehappy.com">upgrade your browser</a>
        to improve your experience.
    </p>
    <![endif]-->



    <header id      ="site-header"
            class   ="row"
    >
        <div class="col-sm-9">
            <!--
                Arachne Web Development Logo
            -->
            <h1 class="center-block text-center">
                <a
                    href="<%- @site.prefixes.root %>/"
                    rel ="Home"
                ><img   id    ="logo"
                        class ="img-responsive"
                        src   ="<%- @site.prefixes.img %>/logo.png"
                        alt   ="Arachne Web Development" 
                /></a>
            </h1>
        </div>


        <nav    id      ="site-nav"
                class   ="col-sm-3 clearfix sidebar-offcanvas"
                role    ="navigation">

            <ul class="nav nav-pills nav-stacked">
                <li<%- ' class="active"' if '/about' is @document.url[0..5] %>><a href="<%- @site.prefixes.root %>/about/">About</a></li>

                <li<%- ' class="active"' if '/instructions' is @document.url[0..12] %>><a href="<%- @site.prefixes.root %>/instructions/">Instructions</a>
                    <ul>
                        <li><a href="<%- @site.prefixes.root %>/instructions/quick-start.html">Quick Start</a></li>
                        <li><a href="<%- @site.prefixes.root %>/instructions/step-by-step.html">Step-by-Step</a></li>
                        <li><a href="<%- @site.prefixes.root %>/instructions/going-further.html">Going Further</a></li>
                    </ul>
                </li>

                <li<%- ' class="active"' if '/resources' is @document.url[0..9] %>><a href="<%- @site.prefixes.root %>/resources/"   >Resources</a>
                    <ul>
                        <li><a href="<%- @site.prefixes.root %>/resources/freebies.html">Freebies</a></li>
                        <li><a href="<%- @site.prefixes.root %>/resources/gallery.html">Gallery</a></li>
                        <li><a href="<%- @site.prefixes.root %>/resources/glossary.html">Glossary</a></li>
                        <li><a href="<%- @site.prefixes.root %>/resources/helpful-links.html">Helpful Links</a></li>
                    </ul>
                </li>
            </ul>

        </nav><!-- /#site-nav -->

    </header><!-- /#site-header -->



    <main id    ="main"
          class ="row"
    >
        <div class="col-sm-9">
        <%- @content %>
        </div>
    </main><!-- /#main -->



    <footer id      ="site-footer"
            class   ="center-block"
    >
        <p>
        Site built on <a href="http://twitter.github.com/bootstrap/" target="_blank">Bootstrap</a>. 
        Code licensed under the <a href="http://www.apache.org/licenses/LICENSE-2.0" target="_blank">Apache License v2.0</a>. 
        Documentation licensed under <a href="http://creativecommons.org/licenses/by/3.0/" target="_blank">CC BY 3.0</a>.
        </p>
        
        <p>
            Site prepared and licensed by <a href="http://umd-arachne.github.io">Arachne Web Development</a> 
            under the <a href="http://creativecommons.org/licenses/by-nc-sa/3.0/deed.en_US" target="_blank">Creative Commons BY-NC-SA 3.0</a>.
        </p>
        
        <p>Last Updated Nov. 17, 2013.</p>
    </footer><!-- /#site-footer -->


</div><!-- /.container (outer-most div) -->
</body>
</html>