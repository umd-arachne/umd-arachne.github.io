$lightBlue  = hsla(208,  56%, 53%, 1)
$violet     = hsla(260, 100%, 30%, 1)
$lightGray  = rgb(215,215,215)


img.HomepagePictures 
    border-color black

#site-header
#site-footer
#main
    background-color transparent
/*!
 *  LINKS
 *---------*/
#main
    a
        color $violet
    
        &:hover
        &:active
        &:focus
            color            $lightBlue
            border-radius    0.5ex

#site-nav
    a
        background-color    #202020
        color               #fff
        transition-property color, background-color
        transition-duration 0.25s
        transition-timing-function ease-out

        &:active
        &:hover
        &:focus
            background-color  #fff
            color             #4c0099
            
    .active a
    .active ul a
        background-color  #fff
        color             #4c0099
            
