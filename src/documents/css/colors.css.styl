$lightBlue  = hsla(208,  56%, 53%, 1)
$violet     = hsla(260, 100%, 30%, 1)
$lightGray  = rgb(215,215,215)


img.HomepagePictures
    border-color black

#site-header
#site-footer
#main
    background-color transparent
    
@css {
    /*! Courtesy of the Ultimate CSS3 Gradient Generator
     *  Link to this gradient:
     *      http://www.colorzilla.com/gradient-editor/#ffffff+0,ffffff+100&0+0,1+100;Custom 
     */
    #main {
        background-image: url(data:image/svg+xml;base64,);
        background-image: -moz-linear-gradient(top,     rgba(255,255,255,0)     0%, 
                                                        rgba(255,255,255,0.333) 100%); /* FF3.6+ */
        background-image: -webkit-gradient(linear, left top, left bottom, 
                                                        color-stop(0%,  rgba(255,255,255,0  )), 
                                                        color-stop(100%,rgba(255,255,255,0.333))
                                                        ); /* Chrome,Safari4+ */
        background-image: -webkit-linear-gradient(top,  rgba(255,255,255,0)       0%,
                                                        rgba(255,255,255,0.333) 100%); /* Chrome10+,Safari5.1+ */
        background-image: -o-linear-gradient(top,       rgba(255,255,255,0)       0%,
                                                        rgba(255,255,255,0.333) 100%); /* Opera 11.10+ */
        background-image: -ms-linear-gradient(top,      rgba(255,255,255,0)       0%,
                                                        rgba(255,255,255,0.333) 100%); /* IE10+ */
        background-image: linear-gradient(to bottom,    rgba(255,255,255,0)       0%,
                                                        rgba(255,255,255,0.333) 100%); /* W3C */
        background-position: fixed;
    }
}
    
    
    
/*!
 *  LINKS
 *---------*/
#main
    a
        color $violet
    
        &:hover
        &:active
        &:focus
            color            $lightBlue
            border-radius    0.5ex

    header
        a
            &:hover
            &:focus
            &:active
                background-color $violet
                color white
    
    h1
        color $violet
    h2
    h3
    h4
    h5
    h6
        color #202020

#site-nav
    a
        background-color    #202020
        color               #fff
        transition-property color, background-color
        transition-duration 0.25s
        transition-timing-function ease-out

        &:active
        &:hover
        &:focus
            background-color  #fff
            color             #4c0099
            
    .active a
    .active ul a
        background-color  #fff
        color             #4c0099

